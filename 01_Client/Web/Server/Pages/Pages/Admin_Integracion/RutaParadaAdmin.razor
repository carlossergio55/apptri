@page "/RutaParadaAdmin"
@using Infraestructura.Models.Integracion
@using MudBlazor
@inherits MainBaseComponent
@layout MainLayout

<MudCard>

    <!-- Panel con formulario -->
    <MudExpansionPanels MultiExpansion="false">
        <MudExpansionPanel @bind-IsExpanded="expande" HideIcon="true">
            <TitleContent>
                <MudContainer MaxWidth="MaxWidth.ExtraSmall" Class="mb-5">
                    <MudButton Variant="Variant.Outlined"
                               Color="@(expande ? Color.Error : Color.Success)"
                               OnClick="@ToggleExpand">
                        @(expande ? "CERRAR" : "AGREGAR RUTA–PARADA")
                    </MudButton>
                </MudContainer>
            </TitleContent>

            <ChildContent>
                <MudCard>
                    <EditForm Model="@_RutaParada" OnValidSubmit="@OnValidRutaParada">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <MudCardContent>
                            <MudGrid>

                                <!-- IdRutaParada -->
                                <MudItem xs="12" sm="6" md="4">
                                    <MudTextField T="int" @bind-Value="_RutaParada.IdRutaParada"
                                                  Label="ID (interno)"
                                                  Variant="Variant.Outlined"
                                                  Margin="Margin.Dense"
                                                  Disabled="true" />
                                </MudItem>

                                <!-- Ruta -->
                                <MudItem xs="12" sm="6" md="4">
                                    <MudSelect T="int" @bind-Value="_RutaParada.IdRuta"
                                               Variant="Variant.Outlined"
                                               Dense="true"
                                               Label="Seleccione ruta"
                                               Required="true">
                                        @foreach (var r in _rutas)
                                        {
                                            <MudSelectItem Value="@r.IdRuta">@($"{r.Origen} → {r.Destino}")</MudSelectItem>
                                        }
                                    </MudSelect>
                                </MudItem>

                                <!-- Parada -->
                                <MudItem xs="12" sm="6" md="4">
                                    <MudSelect T="int" @bind-Value="_RutaParada.IdParada"
                                               Variant="Variant.Outlined"
                                               Dense="true"
                                               Label="Seleccione parada"
                                               Required="true">
                                        @foreach (var p in _paradas)
                                        {
                                            <MudSelectItem Value="@p.IdParada">@p.Nombre</MudSelectItem>
                                        }
                                    </MudSelect>
                                </MudItem>

                                <!-- Orden -->
                                <MudItem xs="12" sm="6" md="4">
                                    <MudNumericField T="int" @bind-Value="_RutaParada.Orden"
                                                     Label="ORDEN"
                                                     Variant="Variant.Outlined"
                                                     Margin="Margin.Dense"
                                                     Min="0" Max="999"
                                                     Required="true" />
                                </MudItem>

                            </MudGrid>
                        </MudCardContent>

                        <MudCardActions>
                            <MudButton ButtonType="ButtonType.Submit"
                                       Disabled="@_isSubmitting"
                                       Variant="Variant.Outlined"
                                       Color="Color.Success"
                                       Class="ml-auto">
                                @(_isSubmitting ? "GUARDANDO..." : "GUARDAR")
                            </MudButton>
                            <MudButton Variant="Variant.Outlined"
                                       Color="Color.Default"
                                       OnClick="@ResetRutaParada">
                                LIMPIAR
                            </MudButton>
                        </MudCardActions>
                    </EditForm>
                </MudCard>
            </ChildContent>
        </MudExpansionPanel>
    </MudExpansionPanels>

    <MudDivider />
    <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Success">
        <b>LISTA RUTA – PARADA</b>
    </MudText>
    <MudDivider />

    <!-- Tabla -->
    <MudTable Items="@_rutaParadas"
              Filterable="true" Sortable="true" Bordered="true"
              Hover="true" Dense="true" RowsPerPage="25"
              RowsPerPageOptions="new int[]{10,25,50,100}">

        <HeaderContent>
            <MudTh>ID</MudTh>
            <MudTh>RUTA</MudTh>
            <MudTh>PARADA</MudTh>
            <MudTh>ORDEN</MudTh>
            <MudTh style="width:140px">OPCIONES</MudTh>
        </HeaderContent>

        <RowTemplate Context="rp">
            <MudTd>@rp.IdRutaParada</MudTd>
            <MudTd>@NombreRuta(rp.IdRuta)</MudTd>
            <MudTd>@NombreParada(rp.IdParada)</MudTd>
            <MudTd>@rp.Orden</MudTd>
            <MudTd>
                <MudTooltip Text="EDITAR" Placement="Placement.Top">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                   Color="Color.Warning" Size="Size.Small"
                                   OnClick="@(() => FormEditar(rp))"
                                   AriaLabel="Editar Ruta-Parada" />
                </MudTooltip>

                <MudTooltip Text="ELIMINAR" Placement="Placement.Top">
                    <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                   Color="Color.Error" Size="Size.Small"
                                   OnClick="@(() => Eliminar(rp.IdRutaParada))"
                                   AriaLabel="Eliminar Ruta-Parada" />
                </MudTooltip>
            </MudTd>
        </RowTemplate>

        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</MudCard>
