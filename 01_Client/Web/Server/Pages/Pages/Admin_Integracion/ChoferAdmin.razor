@page "/ChoferAdmin"
@using Infraestructura.Models.Integracion
@using MudBlazor
@inherits MainBaseComponent
@layout MainLayout


 <MudCard>
<MudExpansionPanels MultiExpansion="false">
    <MudExpansionPanel @bind-IsExpanded="expande" HideIcon="true">
        <TitleContent>
            <MudContainer MaxWidth="MaxWidth.ExtraSmall" Class="mb-5">
                <MudButton Variant="Variant.Outlined" Color="@(expande? Color.Error: Color.Success)"
                           OnClick="@ToggleExpand">
                    @(expande ? "CERRAR" : "AGREGAR UN NUEVO CHOFER")
                </MudButton>
            </MudContainer>
        </TitleContent>

        <ChildContent>
            <MudCard>
                    <EditForm Model="@_Chofer" OnValidSubmit="OnValidChofer">
                        <DataAnnotationsValidator />

                        <MudCardContent>
                            <MudGrid>
                                <MudItem xs="12" sm="6" md="4">
                                    <MudTextField @bind-Value="_Chofer.Nombre" T="string"
                                                  Label="NOMBRE:"
                                                  Variant="Variant.Outlined" Margin="Margin.Dense"
                                                  MaxLength="50" />
                                    <ValidationMessage For="@(() => _Chofer.Nombre)" />
                                </MudItem>

                                <MudItem xs="12" sm="6" md="4">
                                    <MudNumericField @bind-Value="_Chofer.Carnet" T="int"
                                                     Label="CARNET:"
                                                     Variant="Variant.Outlined" Margin="Margin.Dense"
                                                     Required="true" />
                                    <ValidationMessage For="@(() => _Chofer.Carnet)" />
                                </MudItem>

                                <MudItem xs="12" sm="6" md="4">
                                    <MudNumericField @bind-Value="_Chofer.Celular" T="int"
                                                     Label="CELULAR:"
                                                     Variant="Variant.Outlined" Margin="Margin.Dense"
                                                     Required="true" />
                                    <ValidationMessage For="@(() => _Chofer.Celular)" />
                                </MudItem>

                                <MudItem xs="12" sm="6" md="4">
                                    <MudTextField @bind-Value="_Chofer.Licencia" T="string"
                                                  Label="LICENCIA:"
                                                  Variant="Variant.Outlined" Margin="Margin.Dense"
                                                  MaxLength="50" />
                                    <ValidationMessage For="@(() => _Chofer.Licencia)" />
                                </MudItem>
                            </MudGrid>
                        </MudCardContent>

                        <MudCardActions>
                            <MudButton ButtonType="ButtonType.Submit"
                                       Variant="Variant.Outlined" Color="Color.Success" Class="ml-auto">
                                GUARDAR
                            </MudButton>
                            <MudButton Variant="Variant.Outlined" Color="Color.Default"
                                       OnClick="@ResetChofer">
                                LIMPIAR FORMULARIO
                            </MudButton>
                        </MudCardActions>
                    </EditForm>

            </MudCard>
        </ChildContent>
    </MudExpansionPanel>
</MudExpansionPanels>
 <MudDivider />
    <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Success">
        <b>LISTA DE CHOFERES</b>
    </MudText>
    <MudDivider />

    <!-- Tabla -->
    <MudTable Items="@_chofer" Filterable="true" Sortable="true" Bordered="true"
              Hover="true" Dense="true" RowsPerPage="25"
              RowsPerPageOptions="new int[]{10,25,50,100}">
        <HeaderContent>
        <MudTh> COD.</MudTh>
        <MudTh> NOMBRE</MudTh>
        <MudTh> CARNET</MudTh>
        <MudTh> CELULAR</MudTh>
        <MudTh> LICENCIA</MudTh>
        <MudTh>Opciones</MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd>@context.IdChofer</MudTd>
            <MudTd>@context.Nombre</MudTd>
            <MudTd>@context.Carnet</MudTd>
            <MudTd>@context.Celular</MudTd>
            <MudTd>@context.Licencia</MudTd>
        <MudTd>
            <MudTooltip Text="EDITAR" Placement="Placement.Top">
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Warning" Size="Size.Small"
                               />
            </MudTooltip>
            <MudTooltip Text="ELIMINAR" Placement="Placement.Top">
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small"
                              />
            </MudTooltip>
        </MudTd>
        </RowTemplate>

        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
    </MudCard>
