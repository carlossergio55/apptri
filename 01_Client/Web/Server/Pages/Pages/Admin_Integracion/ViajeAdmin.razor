@page "/ViajeAdmin"
@using Infraestructura.Models.Integracion
@using Microsoft.AspNetCore.Components.Forms
@using MudBlazor
@inherits MainBaseComponent
@layout MainLayout

<MudCard>

    <!-- Acciones rápidas -->
    <MudStack Row="true" Spacing="2" Class="p-4 pt-3">
        <MudButton Color="Color.Success" Variant="Variant.Filled"
                   OnClick="@(() => GenerarProximos(14))">
            GENERAR PRÓXIMOS 14 DÍAS
        </MudButton>
        <MudButton Color="Color.Info" Variant="Variant.Outlined"
                   OnClick="@(() => GenerarProximos(1))">
            GENERAR MAÑANA
        </MudButton>
    </MudStack>

    <MudExpansionPanels MultiExpansion="false">
        <MudExpansionPanel @bind-IsExpanded="expande" HideIcon="true">
            <TitleContent>
                <MudContainer MaxWidth="MaxWidth.ExtraSmall" Class="mb-5">
                    <MudButton Variant="Variant.Outlined"
                               Color="@(expande ? Color.Error : Color.Success)"
                               OnClick="@(() => { if (expande) Collapse(); else Expand(); })">
                        @(expande ? "CERRAR" : "AGREGAR")
                    </MudButton>
                </MudContainer>
            </TitleContent>

            <ChildContent>
                <MudCard>
                    <EditForm Model="@_Viaje" OnValidSubmit="@OnValidViaje">
                        <DataAnnotationsValidator />

                        <MudCardContent>
                            <MudGrid>

                                <!-- FECHA -->
                                <MudItem xs="12" sm="6" md="4">
                                    <MudDatePicker @bind-Date="_fechaSel"
                                                   Label="FECHA"
                                                   Variant="Variant.Outlined"
                                                   Margin="Margin.Dense"
                                                   Required="true" />
                                </MudItem>

                                <!-- HORA -->
                                <MudItem xs="12" sm="6" md="4">
                                    <MudGrid>
                                        <MudItem xs="8">
                                            <MudSelect Dense="true" T="string"
                                                       Label="HORA SALIDA"
                                                       @bind-Value="_Viaje.HoraSalida"
                                                       Variant="Variant.Outlined"
                                                       Margin="Margin.Dense"
                                                       Required="true">
                                                @foreach (var h in _horasPreset)
                                                {
                                                    <MudSelectItem T="string" Value="@h">@h</MudSelectItem>
                                                }
                                            </MudSelect>
                                        </MudItem>

                                        <MudItem xs="4" class="d-flex align-center">
                                            <MudChip Color="Color.Primary" Variant="Variant.Filled" Class="ml-2">
                                                @_Viaje.HoraSalida
                                            </MudChip>
                                        </MudItem>

                                        <MudItem xs="12">
                                            <MudTextField T="string"
                                                          @bind-Value="_Viaje.HoraSalida"
                                                          Label="Editar hora manualmente"
                                                          Variant="Variant.Outlined"
                                                          Margin="Margin.Dense"
                                                          HelperText="Formato HH:mm"
                                                          Mask="@_maskHora"
                                                          Required="true" />
                                        </MudItem>
                                    </MudGrid>
                                </MudItem>

                                <!-- ESTADO -->
                                <MudItem xs="12" sm="6" md="4">
                                    <MudSelect T="string"
                                               @bind-Value="_Viaje.Estado"
                                               Label="ESTADO"
                                               Variant="Variant.Outlined"
                                               Dense="true">
                                        <MudSelectItem T="string" Value='@("PROGRAMADO")'>PROGRAMADO</MudSelectItem>
                                        <MudSelectItem T="string" Value='@("EMBARCANDO")'>EMBARCANDO</MudSelectItem>
                                        <MudSelectItem T="string" Value='@("ENRUTA")'>ENRUTA</MudSelectItem>
                                        <MudSelectItem T="string" Value='@("FINALIZADO")'>FINALIZADO</MudSelectItem>
                                        <MudSelectItem T="string" Value='@("CANCELADO")'>CANCELADO</MudSelectItem>
                                    </MudSelect>
                                </MudItem>

                                <!-- RUTA -->
                                <MudItem xs="12" sm="6" md="4">
                                    <MudSelect T="int" @bind-Value="_Viaje.IdRuta"
                                               Label="RUTA"
                                               Variant="Variant.Outlined"
                                               Dense="true"
                                               Required="true">
                                        @foreach (var r in _rutas)
                                        {
                                            <MudSelectItem Value="@r.IdRuta">@($"{r.Origen} → {r.Destino}")</MudSelectItem>
                                        }
                                    </MudSelect>
                                </MudItem>

                                <!-- CHOFER -->
                                <MudItem xs="12" sm="6" md="4">
                                    <MudSelect T="int?" @bind-Value="_choferSel"
                                               Variant="Variant.Outlined" Dense="true"
                                               Label="CHOFER">
                                        @foreach (var c in _chofer)
                                        {
                                            <MudSelectItem Value="@((int?)c.IdChofer)">@c.Nombre</MudSelectItem>
                                        }
                                    </MudSelect>
                                </MudItem>

                                <!-- BUS -->
                                <MudItem xs="12" sm="6" md="4">
                                    <MudSelect T="int?" @bind-Value="_busSel"
                                               Variant="Variant.Outlined" Dense="true"
                                               Label="BUS">
                                        @foreach (var b in _bus)
                                        {
                                            <MudSelectItem Value="@((int?)b.IdBus)">@b.Placa</MudSelectItem>
                                        }
                                    </MudSelect>
                                </MudItem>

                            </MudGrid>
                        </MudCardContent>

                        <MudCardActions>
                            <MudButton ButtonType="ButtonType.Submit"
                                       Variant="Variant.Outlined" Color="Color.Success" Class="ml-auto">
                                GUARDAR
                            </MudButton>
                            <MudButton Variant="Variant.Outlined" Color="Color.Default"
                                       OnClick="@ResetViaje">
                                LIMPIAR FORMULARIO
                            </MudButton>
                        </MudCardActions>
                    </EditForm>
                </MudCard>
            </ChildContent>
        </MudExpansionPanel>
    </MudExpansionPanels>

    <MudDivider />
    <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Success"><b>LISTA DE VIAJES</b></MudText>
    <MudDivider />

    <MudTable Items="@_viajes" Filterable="true" Sortable="true" Bordered="true"
              Hover="true" Dense="true" RowsPerPage="25"
              RowsPerPageOptions="new int[]{10,25,50,100}">
        <HeaderContent>
            <MudTh style="width:5%;max-width:60px;">
                <MudTableSortLabel SortBy="new Func<ViajeDto, object>(x => x.IdViaje)">COD.</MudTableSortLabel>
            </MudTh>
            <MudTh>
                <MudTableSortLabel SortBy="new Func<ViajeDto, object>(x => x.Fecha)">FECHA</MudTableSortLabel>
            </MudTh>
            <MudTh>
                <MudTableSortLabel SortBy="new Func<ViajeDto, object>(x => x.HoraSalida)">HORA</MudTableSortLabel>
            </MudTh>
            <MudTh>ESTADO</MudTh>
            <MudTh>RUTA</MudTh>
            <MudTh>CHOFER</MudTh>
            <MudTh>BUS</MudTh>
            <MudTh>OPCIONES</MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd>@context.IdViaje</MudTd>
            <MudTd>@context.Fecha.ToString("dd/MM/yyyy")</MudTd>
            <MudTd>@context.HoraSalida</MudTd>
            <MudTd>
                <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                    <MudChip Color="@EstadoColor(context.Estado)" Variant="Variant.Filled" Size="Size.Small">
                        @context.Estado
                    </MudChip>
                    @* Chip opcional para marcar viajes extendidos (Jue/Dom 17:30) *@
                    @if (EsExtendido(context))
                    {
                        <MudChip Color="Color.Success" Variant="Variant.Outlined" Size="Size.Small">
                            Extendido
                        </MudChip>
                    }
                </MudStack>
            </MudTd>
            <MudTd>@NombreRuta(context.IdRuta)</MudTd>
            <MudTd>@NombreChofer(context.IdChofer)</MudTd>
            <MudTd>@NombreBus(context.IdBus)</MudTd>
            <MudTd>
                <MudTooltip Text="EDITAR" Placement="Placement.Top">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                   Color="Color.Warning" Size="Size.Small"
                                   OnClick="@(() => FormEditar(context))" />
                </MudTooltip>
                <MudTooltip Text="ELIMINAR" Placement="Placement.Top">
                    <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                   Color="Color.Error" Size="Size.Small"
                                   OnClick="@(() => Eliminar(context.IdViaje))" />
                </MudTooltip>
            </MudTd>
        </RowTemplate>

        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</MudCard>
