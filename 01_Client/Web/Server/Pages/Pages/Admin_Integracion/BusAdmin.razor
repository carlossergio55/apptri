@page "/BusAdmin"
@using Infraestructura.Models.Integracion
@using MudBlazor
@inherits MainBaseComponent
@layout MainLayout

<MudCard>

    <!-- Panel para agregar/editar -->
    <MudExpansionPanels MultiExpansion="false">
        <MudExpansionPanel @bind-IsExpanded="expande" HideIcon="true">
            <TitleContent>
                <MudContainer MaxWidth="MaxWidth.ExtraSmall" Class="mb-5">
                    <MudButton Variant="Variant.Outlined" Color="@(expande? Color.Error: Color.Success)"
                               OnClick="@ToggleExpand">
                        @(expande ? "CERRAR" : "AGREGAR")
                    </MudButton>
                </MudContainer>
            </TitleContent>

            <ChildContent>
                <MudCard>
                    <EditForm Model="@_Bus" OnValidSubmit="OnValidBus">
                        <DataAnnotationsValidator />
                        <MudCardContent>
                            <MudGrid>

                                <MudItem xs="12" sm="6" md="4">
                                    <MudTextField @bind-Value="_Bus.Placa" Label="PLACA:"
                                                  Variant="Variant.Outlined" Margin="Margin.Dense"
                                                  MaxLength="20" Required="true" />
                                </MudItem>

                                <MudItem xs="12" sm="6" md="4">
                                    <MudTextField @bind-Value="_Bus.Modelo" Label="MODELO:"
                                                  Variant="Variant.Outlined" Margin="Margin.Dense"
                                                  MaxLength="50" Required="true" />
                                </MudItem>

                                <MudItem xs="12" sm="6" md="4">
                                    <MudNumericField @bind-Value="_Bus.Capacidad" T="int"
                                                     Label="CAPACIDAD:"
                                                     Variant="Variant.Outlined" Margin="Margin.Dense"
                                                     Required="true" Min="1" />
                                </MudItem>

                            </MudGrid>
                        </MudCardContent>

                        <MudCardActions>
                            <MudButton ButtonType="ButtonType.Submit"
                                       Variant="Variant.Outlined" Color="Color.Success" Class="ml-auto">
                                GUARDAR
                            </MudButton>
                            <MudButton Variant="Variant.Outlined" Color="Color.Default"
                                       OnClick="@ResetBus">
                                LIMPIAR FORMULARIO
                            </MudButton>
                        </MudCardActions>
                    </EditForm>
                </MudCard>
            </ChildContent>
        </MudExpansionPanel>
    </MudExpansionPanels>

    <MudDivider />
    <MudText Typo="Typo.h5" Color="Color.Primary" Align="Align.Center">
        <MudIcon Icon="@Icons.Material.Filled.DirectionsBus" Class="me-2" />
        <b>LISTA DE BUSES</b>
        <MudIcon Icon="@Icons.Material.Filled.DirectionsBus" Class="me-2" />
    </MudText>
    <MudDivider />

    <!-- Tabla de Buses -->
    <MudTable Items="@_buses" Filterable="true" Sortable="true" Bordered="true"
              Hover="true" Dense="true" RowsPerPage="25"
              RowsPerPageOptions="new int[]{10,25,50,100}">
        <HeaderContent>
            <MudTh>CÓD.</MudTh>
            <MudTh>PLACA</MudTh>
            <MudTh>MODELO</MudTh>
            <MudTh>CAPACIDAD</MudTh>
            <MudTh>OPCIONES</MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd>@context.IdBus</MudTd>
            <MudTd>@context.Placa</MudTd>
            <MudTd>@context.Modelo</MudTd>
            <MudTd>@context.Capacidad</MudTd>
            <MudTd>
                <MudTooltip Text="EDITAR" Placement="Placement.Top">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Warning" Size="Size.Small"
                                   OnClick="@(() => FormEditar(context))" />
                </MudTooltip>
                <MudTooltip Text="ELIMINAR" Placement="Placement.Top">
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small"
                                   OnClick="@(() => Eliminar(context.IdBus))" />
                </MudTooltip>
                <MudTooltip Text="ARREGLAR ASIENTOS (1..capacidad)" Placement="Placement.Top">
                    <MudIconButton Icon="@Icons.Material.Filled.BuildCircle" Color="Color.Primary" Size="Size.Small"
                                   OnClick="@(() => EnsureSeats(context))" />
                </MudTooltip>
            </MudTd>
        </RowTemplate>

        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</MudCard>
