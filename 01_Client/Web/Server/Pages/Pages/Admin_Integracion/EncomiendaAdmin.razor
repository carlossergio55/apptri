@page "/EncomiendaAdmin"
@using Infraestructura.Models.Integracion
@using MudBlazor
@inherits MainBaseComponent
@layout MainLayout

<MudCard>

    <!-- Panel con formulario -->
    <MudExpansionPanels MultiExpansion="false">
        <MudExpansionPanel @bind-IsExpanded="expande" HideIcon="true">

            <TitleContent>
                <MudContainer MaxWidth="MaxWidth.ExtraSmall" Class="mb-5">
                    <MudButton Variant="Variant.Outlined" Color="@(expande? Color.Error: Color.Success)"
                               OnClick="@ToggleExpand">
                        @(expande ? "CERRAR" : "AGREGAR")
                    </MudButton>
                </MudContainer>
            </TitleContent>

            <ChildContent>
                <MudCard>
                    <EditForm Model="@_Encomienda" OnValidSubmit="OnValidEncomienda">
                        <DataAnnotationsValidator />

                        <MudCardContent>
                            <MudGrid>

                                <!-- Remitente -->
                                <MudItem xs="12" sm="6" md="4">
                                    <MudTextField @bind-Value="_Encomienda.Remitente"
                                                  Label="REMITENTE:" Variant="Variant.Outlined" Margin="Margin.Dense"
                                                  Required="true" MaxLength="100" />
                                </MudItem>

                                <!-- Destinatario -->
                                <MudItem xs="12" sm="6" md="4">
                                    <MudTextField @bind-Value="_Encomienda.Destinatario"
                                                  Label="DESTINATARIO:" Variant="Variant.Outlined" Margin="Margin.Dense"
                                                  Required="true" MaxLength="100" />
                                </MudItem>

                                <!-- Descripción -->
                                <MudItem xs="12" sm="12" md="4">
                                    <MudTextField @bind-Value="_Encomienda.Descripcion"
                                                  Label="DESCRIPCIÓN:" Variant="Variant.Outlined" Margin="Margin.Dense"
                                                  MaxLength="200" />
                                </MudItem>

                                <!-- Peso -->
                                <MudItem xs="12" sm="6" md="3">
                                    <MudNumericField @bind-Value="_Encomienda.Peso" T="decimal"
                                                     Label="PESO (Kg):" Variant="Variant.Outlined" Margin="Margin.Dense"
                                                     Required="true" />
                                </MudItem>

                                <!-- Precio -->
                                <MudItem xs="12" sm="6" md="3">
                                    <MudNumericField @bind-Value="_Encomienda.Precio" T="decimal"
                                                     Label="PRECIO (Bs):" Variant="Variant.Outlined" Margin="Margin.Dense"
                                                     Required="true" />
                                </MudItem>

                                <!-- IdViaje -->
                                <MudItem xs="12" sm="6" md="3">
                                    <MudNumericField @bind-Value="_Encomienda.IdViaje" T="int"
                                                     Label="ID VIAJE:" Variant="Variant.Outlined" Margin="Margin.Dense"
                                                     Required="true" />
                                </MudItem>

                                <!-- Guía de carga -->
                                <MudItem xs="12" sm="6" md="3">
                                    <MudTextField @bind-Value="_Encomienda.GuiaCarga"
                                                  Label="GUÍA CARGA:" Variant="Variant.Outlined" Margin="Margin.Dense"
                                                  MaxLength="50" />
                                </MudItem>

                                <!-- Estado -->
                                <MudItem xs="12" sm="6" md="3">
                                    <MudTextField @bind-Value="_Encomienda.Estado"
                                                  Label="ESTADO:" Variant="Variant.Outlined" Margin="Margin.Dense"
                                                  MaxLength="50" />
                                </MudItem>

                                <!-- Pagado -->
                                <MudItem xs="12" sm="6" md="3">
                                    <MudSwitch @bind-Checked="_Encomienda.Pagado" Color="Color.Success"
                                               Label="@("PAGADO")" />
                                </MudItem>

                            </MudGrid>
                        </MudCardContent>

                        <MudCardActions>
                            <MudButton ButtonType="ButtonType.Submit"
                                       Variant="Variant.Outlined" Color="Color.Success" Class="ml-auto">
                                GUARDAR
                            </MudButton>
                            <MudButton Variant="Variant.Outlined" Color="Color.Default"
                                       OnClick="@ResetEncomienda">
                                LIMPIAR FORMULARIO
                            </MudButton>
                        </MudCardActions>
                    </EditForm>
                </MudCard>
            </ChildContent>
        </MudExpansionPanel>
    </MudExpansionPanels>

    <MudDivider />
    <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Success">
        <b>LISTA DE ENCOMIENDAS</b>
    </MudText>
    <MudDivider />

    <!-- Tabla -->
    <MudTable Items="@_encomiendas" Filterable="true" Sortable="true" Bordered="true"
              Hover="true" Dense="true" RowsPerPage="25"
              RowsPerPageOptions="new int[]{10,25,50,100}">

        <HeaderContent>
            <MudTh style="width:5%;max-width:60px;">
                <MudTableSortLabel SortBy="new Func<EncomiendaDto, object>(x => x.IdEncomienda)">
                    COD.
                </MudTableSortLabel>
            </MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<EncomiendaDto, object>(x => x.Remitente)">REMITENTE</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<EncomiendaDto, object>(x => x.Destinatario)">DESTINATARIO</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<EncomiendaDto, object>(x => x.Peso)">PESO</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<EncomiendaDto, object>(x => x.Precio)">PRECIO</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<EncomiendaDto, object>(x => x.Estado)">ESTADO</MudTableSortLabel></MudTh>
            <MudTh>Opciones</MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd>@context.IdEncomienda</MudTd>
            <MudTd>@context.Remitente</MudTd>
            <MudTd>@context.Destinatario</MudTd>
            <MudTd>@context.Peso</MudTd>
            <MudTd>@context.Precio</MudTd>
            <MudTd>@context.Estado</MudTd>
            <MudTd>
                <MudTooltip Text="EDITAR" Placement="Placement.Top">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                   Color="Color.Warning" Size="Size.Small"
                                   OnClick="@(()=>FormEditar(context))" />
                </MudTooltip>
                <MudTooltip Text="ELIMINAR" Placement="Placement.Top">
                    <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                   Color="Color.Error" Size="Size.Small"
                                   OnClick="@(()=>Eliminar(context.IdEncomienda))" />
                </MudTooltip>
            </MudTd>
        </RowTemplate>

        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</MudCard>