@page "/dashboard"
@using MudBlazor

@inherits MainBaseComponent
@layout MainLayout

<MudPaper Class="pa-4">
    <MudText Typo="Typo.h5" Class="mb-4">Resumen General</MudText>

    <MudGrid GutterSize="3">
        <!-- Pasajes vendidos hoy -->
        <MudItem xs="12" sm="6" md="3">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.subtitle1">Pasajes vendidos hoy</MudText>
                    <MudText Typo="Typo.h4" Color="Color.Primary">@pasajesVendidosHoy</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Encomiendas enviadas -->
        <MudItem xs="12" sm="6" md="3">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.subtitle1">Encomiendas enviadas</MudText>
                    <MudText Typo="Typo.h4" Color="Color.Info">@encomiendasEnviadas</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Viajes programados -->
        <MudItem xs="12" sm="6" md="3">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.subtitle1">Viajes programados hoy</MudText>
                    <MudText Typo="Typo.h4" Color="Color.Success">@viajesHoy</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Unidades en mantenimiento -->
        <MudItem xs="12" sm="6" md="3">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.subtitle1">Unidades en mantenimiento</MudText>
                    <MudText Typo="Typo.h4" Color="Color.Error">@unidadesMantenimiento</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudPaper>

@code {
    int pasajesVendidosHoy = 0;
    int encomiendasEnviadas = 0;
    int viajesHoy = 0;
    int unidadesMantenimiento = 0;

    protected override async Task OnInitializedAsync()
    {
        // Simulación de carga de datos - reemplazar por acceso a tus servicios reales
        pasajesVendidosHoy = 125;
        encomiendasEnviadas = 37;
        viajesHoy = 9;
        unidadesMantenimiento = 2;
    }
}
